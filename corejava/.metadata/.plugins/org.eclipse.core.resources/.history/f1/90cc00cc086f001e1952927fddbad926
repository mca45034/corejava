package in.com.OI;

import java.io.File;
import java.io.IOException;

public class Puri_Detailes_Folder {

	public static void main(String[] args) throws IOException {
		File f=new File("C:\\Users\\HP\\Desktop\\IO\\Dev.txt");
		if(f.exists()) {
			System.out.println("file name is : "+f.getName());
			System.out.println("file path.. :"+f.getAbsolutePath());
			System.out.println("file length..:"+f.length());
			System.out.println("file...getperent :"+f.getParent());
			System.out.println("file.."+f.getFreeSpace());
			System.out.println("file...:"+f.getCanonicalPath());
			System.out.println("file... :"+f.toString());
			System.out.println("file... :"+f.lastModified());
			System.out.println("file... :"+f.isHidden());//boolean
			System.out.println("file...:"+f.isFile());//boolean
			System.out.println("file.....:"+f.listRoots());//file hashcode address
			System.out.println("file... :"+f.list());//boolean
			System.out.println("file..:"+f.isDirectory());
		}

	}

}
